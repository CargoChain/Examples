@model eShop.Models.Product

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@{
    ViewData["Title"] = "Add product";
}

<div>
    <h1 class="display-4">Add Product</h1>

    <form asp-action="Add">
        <div class="row mb-3 mt-4">
            @Html.LabelFor(product => product.Name, new { @class = "col-sm-2 col-form-label required" })
            <div class="col-sm-10">
                @Html.TextBoxFor(product => product.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(product => product.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(product => product.Description, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(product => product.Description, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(product => product.Price, new { @class = "col-sm-2 col-form-label, required" })
            <div class="col-sm-10">
                @Html.TextBoxFor(product => product.Price, new { @class = "form-control", @type = "number", min = "0", step = ".01" })
                @Html.ValidationMessageFor(product => product.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-right">
            <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </form>
</div>