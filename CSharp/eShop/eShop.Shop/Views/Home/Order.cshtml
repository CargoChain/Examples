@model eShop.Shop.Models.Product

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@{
    ViewData["Title"] = "Order confirmation";
}

<div>
    <h1 class="display-4">Order Confirmation</h1>

    <p class="lead mt-4">
        Please, could you confirm your order and enter your address in order to deliver the product.
    </p>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Product details</h5>
            <div class="row">
                <div class="col-6">
                    <label class="font-weight-bold text-muted mb-1">Name</label>
                    <p>@Model.Name</p>
                </div>
                <div class="col-6">
                    <label class="font-weight-bold text-muted mb-1">Price</label>
                    <p>@Model.Price</p>
                </div>
            </div>

            <label class="font-weight-bold text-muted mb-1">Description</label>
            <p class="mb-0">@Model.Description</p>
        </div>
    </div>

    <form asp-action="Order">
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Delivery address</h5>
                <div>
                    @Html.TextAreaFor(product => product.DeliveryAddress, new { @class = "form-control", rows = 4 })
                    @Html.ValidationMessageFor(product => product.DeliveryAddress, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group text-right mt-4">
            <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
            <input type="submit" value="Confirm your order" class="btn btn-primary" />
        </div>
    </form>
</div>